<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col">
            <p class="text-end">Hola {{persona}}! 
                <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión <i class="fas fa-sign-out-alt"></i> </a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-succes"> <i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                     </thead>
                     <tbody>
                        {{#each novedades}}
                        <tr >
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-center">
                                <a href="/admin/novedades/modificar/ {{id}} " class="btn btn-secondary"> <i class="fas fa-pencil-alt"></i></a>
                                <a href="/admin/novedades/eliminar/ {{id}}" class="btn btn-secondary"> <i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                     </tbody>
            </table>
        </div>
    </div>
</div>